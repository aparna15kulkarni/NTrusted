    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"
        android:textStyle="bold"
        android:text="Aparna"
        android:textColor="@color/cardview_light_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Camera"
        android:paddingRight="15dp"
        android:textSize="15dip"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:layout_alignBaseline="@+id/dateTime"
        android:layout_alignBottom="@+id/dateTime"
        android:layout_alignRight="@+id/productName"
        android:layout_alignEnd="@+id/productName" />

    <TextView
        android:id="@+id/wantsTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="wants to"
        android:paddingLeft="15dp"
        android:textSize="15dip"
        android:textStyle="bold"
        android:textColor="@color/cardview_light_background"
        android:layout_alignBaseline="@+id/userName"
        android:layout_alignBottom="@+id/userName"
        android:layout_toRightOf="@+id/userName"
        android:layout_toEndOf="@+id/userName"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/adType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="lend"
        android:textColor="@color/orange"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignBottom="@+id/userName"
        android:layout_toLeftOf="@+id/productName"
        android:layout_toStartOf="@+id/productName"
        />

    <TextView

        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nikon Camera"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="@color/cardview_light_background"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBottom="@+id/wantsTo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dip"
        android:text="12/1/2016 4:00PM"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@+id/userName"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName" />


</RelativeLayout>